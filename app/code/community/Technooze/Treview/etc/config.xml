<?xml version="1.0"?>
<config>
    <modules>
        <Technooze_Treview>
            <version>0.1.0</version>
        </Technooze_Treview>
    </modules>
    <frontend>
        <routers>
            <treview>
                <use>standard</use>
                <args>
                    <module>Technooze_Treview</module>
                    <frontName>treview</frontName>
                </args>
            </treview>
        </routers>
        <layout>
            <updates>
                <treview>
                    <file>treview.xml</file>
                </treview>
            </updates>
        </layout>
    </frontend>
    <global>
        <helpers>
            <treview>
                <class>Technooze_Treview_Helper</class>
            </treview>
        </helpers>
        <blocks>
            <treview>
                <class>Technooze_Treview_Block</class>
            </treview>
        </blocks>
    </global>
</config>